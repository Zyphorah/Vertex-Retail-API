@page
@model _521.tpfinal.web.Pages.CartModel
@{
    ViewData["Title"] = "Mon Panier";
}

<div class="container mt-4">
    <h1><i class="bi bi-cart3"></i> @ViewData["Title"]</h1>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.CartResponse?.Cart?.Items != null && Model.CartResponse.Cart.Items.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Produit</th>
                        <th>Prix unitaire</th>
                        <th>Quantité</th>
                        <th>Sous-total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartResponse.Cart.Items)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.ProductPrice.ToString("C", new System.Globalization.CultureInfo("en-CA"))</td>
                            <td>@item.Quantity</td>
                            <td><strong>@item.SubTotal.ToString("C", new System.Globalization.CultureInfo("en-CA"))</strong></td>
                            <td>
                                <form method="post" asp-page-handler="RemoveItem" 
                                      onsubmit="return confirm('Retirer cet article du panier?');">
                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Retirer
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-primary">
                        <td colspan="3" class="text-end"><strong>Total:</strong></td>
                        <td><strong>@Model.CartResponse.TotalPrice.ToString("C", new System.Globalization.CultureInfo("en-CA"))</strong></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
        
        <div class="d-flex justify-content-between mt-4">
            <a asp-page="/Products/Products" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Continuer les achats
            </a>
            <form method="post" asp-page-handler="Checkout">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-credit-card"></i> Passer la commande
                </button>
            </form>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-cart-x" style="font-size: 4rem; color: #6c757d;"></i>
            <h3 class="mt-3">Votre panier est vide</h3>
            <p class="text-muted">Parcourez nos produits et ajoutez-en à votre panier.</p>
            <a asp-page="/Products/Products" class="btn btn-primary mt-3">
                <i class="bi bi-shop"></i> Voir les produits
            </a>
        </div>
    }
</div>