@page
@model _521.tpfinal.web.Pages.Admin.AddProductModel
@{
    ViewData["Title"] = "Ajouter un Produit";
}

<h1>Ajouter un Produit</h1>

<div class="row">
    <div class="col-md-6">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Product.Name" class="form-label">Nom du Produit</label>
                <input asp-for="Product.Name" class="form-control" placeholder="Ex: Produit ABC" required />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Product.Description" class="form-label">Description</label>
                <textarea asp-for="Product.Description" class="form-control" rows="4" placeholder="Description du produit..." minlength="10" maxlength="500" required></textarea>
                <small class="form-text text-muted">La description doit contenir entre 10 et 500 caractères</small>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Product.Price" class="form-label">Prix ($)</label>
                <input asp-for="Product.Price" type="number" step="0.01" min="0.01" class="form-control" placeholder="0.00" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Product.Category" class="form-label">Catégorie</label>
                <input asp-for="Product.Category" class="form-control" placeholder="Ex: Électronique" required />
                <span asp-validation-for="Product.Category" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Product.Stock" class="form-label">Stock</label>
                <input asp-for="Product.Stock" type="number" min="0" class="form-control" placeholder="0" />
                <span asp-validation-for="Product.Stock" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Ajouter le Produit</button>
            <a href="/Products/Products" class="btn btn-secondary">Annuler</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
